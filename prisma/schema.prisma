generator client {
  provider = "prisma-client"
  output   = "app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Shader {
  //identifiers
  id         String @id @default(cuid())
  title      String @default("Untitled Shader")
  shaderText String @db.Text

  //author info
  authorId String
  author   User   @relation(fields: [authorId], references: [id], onDelete: Cascade)

  //update and create times
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //whether or not shader is public
  public Boolean @default(true)
}

model User {
  id            String    @id @default(cuid())
  name          String?   @unique
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  //can be optional since we can create an account with google
  password String?
  accounts Account[]
  sessions Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  shaders Shader[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
